<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.MailFilterController">
   <children>
      <VBox prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label prefHeight="30.0" text="Enter filter criterias (max: 5)">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin></Label>
            <Separator prefWidth="200.0" />
            <VBox fx:id="vBoxFilter" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox prefHeight="35.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <ChoiceBox fx:id="choiceBox1" prefWidth="100.0" />
                        <ChoiceBox fx:id="choiceBox2" prefWidth="130.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </ChoiceBox>
                        <TextField fx:id="filterTextField" prefWidth="250.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <Button fx:id="addFilter" mnemonicParsing="false" text="+">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </VBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button fx:id="buttonAbbrechen" mnemonicParsing="false" prefWidth="80.0" text="Abbrechen" />
                  <Button fx:id="buttonFilter" mnemonicParsing="false" prefWidth="80.0" text="Filter">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
